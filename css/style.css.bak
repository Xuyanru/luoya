/*导航*/
body{
    background: #f2f2f2;
}
#nav {
    position:absolute;
    width:100%;
    height:80px;
    padding-top:20px;
    background:rgba(0,0,0,0.3);
    z-index:10;
}
#nav .w1200{
    position:relative;
}
.logo{
    width:200px;
    height:60px;
    margin-right:100px;
}
#main_nav{
    width:680px;
    height:55px;
}
#main_nav li{
    width:130px;
}
#main_nav li a{
    font-size:16px;
    display: block;
    color:#fff;
    text-decoration: none;
    padding:8px 20px;
    line-height:22px;
}
#main_nav li a span{
    font-size:12px;
}
.search{
    width:200px;
    margin-top:25px;
}
.search input:first-child{
    width:150px;
    border-bottom-left-radius: 5px;
    border-top-left-radius: 5px;
}
.search input{
    height:25px;
    border:none;
}
.search input:last-child{
    width:50px;
    border-bottom-right-radius: 5px;
    border-top-right-radius: 5px;
    background:#a80000;
    cursor: pointer;
}
.search input:last-child:hover{
    background:#c80000;
}
#main_nav li.active .sub{
	display:block;
}
#main_nav li a:hover,#main_nav li a.active{
    background:#C80000;
}
.sub{
    background:rgba(0,0,0,0.3);
    display:none;
}
#main_nav li:hover .sub{
    display:block;
}
/*banner*/
#slider li{
    position:absolute;
}
#banner,#slider{
    overflow: hidden;
    position:relative;
    width:100%;
    height:550px;
}
#slider li{
    opacity:0;
}
#slider li:first-child{
    opacity: 1;
}
#idx{
    position:absolute;
    bottom:30px;
    right:45%;
    z-index: 12;
}
#idx li{
    width:15px;
    height:15px;
    background:#ccc;
    margin:0 10px;
    border-radius: 50%;
    cursor: pointer;
}
#idx li.active{
    background:#269abc;
}
/*menu*/


/*公司简介*/


/*新闻中心*/
.news{
    background:#f2f2f2;
    overflow: hidden;
}
.news_left{
    width:560px;
}
.news_left img{
    width:100%;
    height:auto;
}
.news_right{
    width:640px;
}
.news_box{
    width:270px;
    margin-left:15px;
    padding:15px;
    background:#fff;
}
.news_list li{
    height:35px;
    line-height: 35px;
    border-bottom:1px dashed #ccc;
}
.about_box{
    margin:20px 0 0 15px;
    padding:15px 15px;
    background: #fff;
    overflow: hidden;
}
/*作品赏析*/
.appr{
    background:#000;
    overflow: hidden;
}
.appr_list{
    margin:20px 0;
}
.appr_list li{
    width:12.5%;
    position:relative;
}
.appr_list li img{
    width:100%;
    height:auto;
}
.btn_play{
    position:absolute;
    width:100%;
    top:70%;
    left:0;
    transition: top 0.3s;
}
.appr_list li:hover .btn_play{
    top:50%;
}
.appr_list li:hover .cover{
    display: block;
}
.appr_list li:hover .btn_play span{
    background:#0cb9f2;
    border:1px solid #0cb9f2;
    color:#333;
}
.btn_play span{
    padding:0px 20px;
    border:2px solid #fff;
    border-radius:30px;
    font-size:16px;
    height:32px;
    line-height:32px;
    background:rgba(101,130,140,0.5);
    color:#fff;
    display: inline-block;
}
.cover{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,0.5);
    display:none;
}
/*精彩客片*/
.case_box{
    overflow: hidden;
}
.case_box li{
    width:300px;
}
.case_box li img{
    width:100%;
    height:auto;
}
.case_box li:hover{
    box-shadow: 0px 0px 30px 0px #000;
}
/*店长推荐*/
.tj{
    background:#f2f2f2;
    overflow: hidden;
    margin-bottom:40px;
}
.tj_box li:first-child{
    width:590px;
    margin-right:10px;
}
.tj_box li:last-child{
    width:590px;
    margin-left:10px;
}
/*联系我们*/
.addr{
    background: #fff;
}
/*页脚*/
#footer_top{
    background:#a50000;
    overflow: hidden;
    padding:20px 0 ;
    color:#fff;
}
.foot_left{
    margin-right:50px;
}
.foot_center ul li{
    margin:10px 40px;
}
.foot-right{
    width:400px;
}
.copyright{
    padding:10px 0 20px 0;
    background:#000;
}
/*样片展示*/
.product_list ul li{
    width:360px;
    margin:10px;
    transition:all 0.3s;
}
.product_list ul li:hover{
    box-shadow: 0 0 15px 0 #000;
}
.product_list ul li img{
    width:100%;
}
.bottom_line{
    border-bottom:1px dashed #aaa;
}
.product_list p{
    text-align:right;
    font-size: 12px;
    padding-right: 10px;
}
.product_list p.bt{
    font-size: 14px;
}
/*关于罗亚*/
.mainbody{
    background: #FFFFFF;
}
.mainbody p{
    width:1200px;
    margin:0 auto;
}
/*服务页面*/
.service_content ul li.left{
    width:620px;
    float:left;
    overflow: hidden;
}
.service_content ul{
    overflow: hidden;
    cursor: pointer;
    padding:20px;
}
.service_content ul img{
    width:100%;
    transition:transform 0.3s;
}
.service_content ul:hover img{
    transform:scale(1.1);
}
.service_content ul li.right{
    width:480px;
    float:left;
}
.service_content ul li.right a{
    font-size: 18px;
    font-weight: bold;
    color:#111;
    line-height: 30px;
}
.service_content ul li.right a:hover{
    color:#c80000;
}
.post_time{
    margin-bottom:30px;
}
.service_title{

}
/*限时活动*/
.huodong_content{
	overflow:hidden;
}
.huodong_content ul{
	width:550px;
	margin:25px;
	position:relative;
	overflow:hidden;
}
.huodong_content ul img{
	width:100%;
}
.huodong_content ul li:last-child{
	position:absolute;
	left:0;
	top:50%;
	width:550px;
	height:0;
	background:rgba(0,0,0,0.5);
	text-align:center;
	line-height:202px;
	transition:all 0.3s;
}
.huodong_content ul li:last-child a{
	font-size:25px;
	color:#fff;
}
.huodong_content ul li:last-child a:hover{
	text-decoration:none;
	color:#C73917;
}
.huodong_content ul:hover li:last-child{
	height:202px;
	top:0;
}
.huodong_content ul li:last-child a{
	opacity:0;
	transition:all 0.3s;
}
.huodong_content ul li:first-child{
	transition:all 0.3s;
}
.huodong_content ul:hover li:first-child{
	transform:scale(1.1);
}
.huodong_content ul:hover li:last-child a{
	opacity:1;
}